<%# PAGE FOR THE ROLLS YOU CAN SELECT THEN BELOW THE PICTURES AND DETAILS SHOW UP %>

<div class="camera-nav">
  <%= link_to root_path do %>
    <p><span class="letter">filmy</span><span class="letter">-</span><span class="letter">j</span></p>
  <% end %>
</div>

<div class="back">
  <%= link_to "BACK TO CAMERAS", cameras_path, class: "back-button" %>
</div>

<div class="film-header-container">
  <h1><%= @camera.model.upcase %> FILM</h1>
</div>

<div class="rolls-container" data-controller="film">
  <div class="roll-list" data-controller="roll">
    <% @cameras_rolls.each do |roll| %>
        <div class="roll-item" id="roll-<%= roll.camera_id %>-<%= roll.id %>">
          <%= roll.name %>
          <%= link_to "🛠", edit_camera_roll_path(@camera, roll), class: "edit-button-camera" %>
          <%= link_to "❌", camera_roll_path(@camera, roll), data:{turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this roll?" }, class:"delete-button-camera" %>
        </div>
    <% end %>
    <%= link_to "+", new_camera_roll_path(@camera), class: "roll-item" %>
      <%# <div class="roll-item" id="new">+</div> %>
      <%# <p>+</p> %>

  </div>
</div>


<%# Where the roll content goes via AJAX Request %>
<div class="rolls-content-container">
  <%# _roll.html.erb %>
</div>
