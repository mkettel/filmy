<%= render "shared/c_preloader" %>

<section class="content">
  <div class="camera-nav">
    <%= link_to root_path do %>
      <p><span class="letter">filmy</span><span class="letter">-</span><span class="letter">j</span></p>
    <% end %>
  </div>
  <div class="instructions">
    <h4>select your <span class="word">camera</span></h4>
  </div>
  <div class="camera-container">
    <div class="camera-content">
      <h1>CAMERAS</h1>
    </div>
    <div class="selection-container" data-controller="camera">
      <div class="camera-list">
        <% @users_cameras.each do |camera| %>
          <div class="camera-item" id="<%= camera.id %>">
            <%= camera.model %>
            <%= link_to "DELETE", camera_path(camera), data:{turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this camera?" }, class:"delete-button" %>
          </div>
        <% end %>
        <div class="camera-item" id="new"><%= link_to "+", new_camera_path %></div>
      </div>
    </div>
    <div class="camera-content">
      <p><%= link_to "GO TO FILM", "#", id:"filmButton" %></p>
    </div>
  </div>
  <%# camera dial %>

</section>
